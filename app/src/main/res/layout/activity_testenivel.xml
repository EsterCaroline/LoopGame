<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BED1F6F3"
    tools:context=".ActivityTesteNivel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutTelaTeste"
        android:layout_width="409dp"
        android:layout_height="90dp"
        android:background="#6DB5FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textViewProva"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:text="Teste de nivel"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.196"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="53dp"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

        <TextView
            android:id="@+id/textViewPontosTeste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewtt"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/terceiroConstraintLayoutTela"
        android:layout_width="377dp"
        android:layout_height="569dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:id="@+id/scrollViewAlternativas"
            android:layout_width="340dp"
            android:layout_height="227dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.724">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPrimeiraAlternativaTeste"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BED1F6F3"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="90dp" />

                <Button
                    android:id="@+id/btnSegundaAlternativaTeste"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BED1F6F3"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="90dp" />

                <Button
                    android:id="@+id/btnTerceiraAlternativaTeste"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BED1F6F3"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="90dp" />

                <Button
                    android:id="@+id/btnQuartaAlternativaTeste"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BED1F6F3"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="90dp" />

                <Button
                    android:id="@+id/btnQuintaAlternativaTeste"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BED1F6F3"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="90dp" />


            </LinearLayout>
        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/segundoConstraintLayoutTela"
            android:layout_width="362dp"
            android:layout_height="179dp"
            android:background="#EB8ADCD4"
            app:layout_constraintBottom_toTopOf="@+id/scrollViewAlternativas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.205">

            <ScrollView
                android:layout_width="360dp"
                android:layout_height="177dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPerguntaTeste"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="58dp"
                        tools:layout_editor_absoluteY="15dp" />
                </LinearLayout>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/imageButtonVoltarTelaRealizeProvaNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/_829860_arrow_back_left_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>